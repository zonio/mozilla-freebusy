<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>

<!DOCTYPE window SYSTEM "chrome://zoniofreebusy/locale/freebusy.dtd">

<prefwindow
  xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
  id="zoniofreebusy-prefs"
  title="&zonio.freebusy.options.title;"
  onload="zoniofreebusyOptionsOnLoad();">

   <script type="application/javascript"
           src="chrome://zoniofreebusy/content/options.js"/>

   <prefpane
     id="zoniofreebusy-options-pane" label="Service">
     <preferences>
        <preference
          id="zoniofreebusy-pref-service"
          name="extensions.zonio.freebusy.pref.serviceType"
          type="string"/>
        <preference
          id="zoniofreebusy-pref-exchange-host"
          name="extensions.zonio.freebusy.pref.exchangeHost"
          type="string"/>
     </preferences>

     <vbox>
        <label
          value="&zonio.freebusy.options.serviceType;"
          control="zoniofreebusy-pref-radiogroup-service"/>
        <radiogroup
            id="zoniofreebusy-pref-radiogroup-service"
            preference="zoniofreebusy-pref-service">
          <radio
            id="zoniofreebusy-pref-radio-service-fbinfo"
            label="isfreebusy.info"
            value="isfreebusy.info"
            selected="true"/>
          <radio
            id="zoniofreebusy-pref-radio-service-exchange"
            label="exchange"
            value="exchange"/>
        </radiogroup>
        <hbox>
           <separator orient="vertical"/>
           <textbox
              id="zoniofreebusy-pref-textbox-exchange-host"
              preference="zoniofreebusy-pref-exchange-host"
              value="example.org:8080"/>
        </hbox>
      </vbox>
   </prefpane>
</prefwindow>
